.form-label
.form-value
    display inline-block
    box-sizing border-box
    font-size 1rem
.form-label
    text-align right
    padding-right 10px
.form-value
    input
        width 100%
        box-sizing border-box
        font-size 1rem
        padding .75rem
        border-radius 3px
        border 1px solid #efefef
        &:focus
            border-color #90CAF9
            outline none
.form_callback
    width 20rem
    margin 0 auto
    font-size 1rem
    .form-header
        font-size 2rem
        font-weight bold
        margin-bottom .75rem
    .form-line:not(:last-child)
        margin-bottom .75rem
    .form-label
        width 30%
    .form-value
        width 70%
